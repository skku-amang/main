{
  "name": "@repo/database",
  "version": "0.0.0",
  "private": true,
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup ./index.ts",
    "dev": "tsup ./index.ts --watch",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev --skip-generate",
    "db:deploy": "prisma migrate deploy",
    "format": "prettier --write \"**/*.ts\"",
    "lint": "eslint \"**/*.ts\" --fix"
  },
  "devDependencies": {
    "prisma": "^6.11.1",
    "tsup": "^8.5.0",
    "@repo/eslint-config": "workspace:*"
  },
  "dependencies": {
    "@prisma/client": "^6.11.1"
  }
}
